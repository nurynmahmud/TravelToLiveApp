<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List_Accommodation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Eat HALAL"
                android:textSize="38dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/trips7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bangkok,Thailand"
                        android:textStyle="bold"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:layout_marginTop="155dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/trips5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali ,Indonesia"
                        android:textStyle="bold"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:layout_marginTop="155dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/trips3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo,Japan"
                        android:textStyle="bold"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:layout_marginTop="155dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c4"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/trips2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marina Bay,Singapore"
                        android:textStyle="bold"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:layout_marginTop="155dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>